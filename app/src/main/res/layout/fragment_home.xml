<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_end_color"
    tools:context=".ui.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/covid_definition_text"
            style="@style/HomeTextQStyle"
            android:background="@drawable/rounded_corner"
            android:text="@string/What_is_Covid19" />

        <TextView
            android:id="@+id/home_quarantine_rule_text"
            style="@style/HomeTextQStyle"
            android:background="@drawable/rounded_corner"
            android:text="@string/home_quarantine_rules" />

        <TextView
            android:id="@+id/check_yourself_text"
            style="@style/HomeTextQStyle"
            android:background="@drawable/rounded_corner"
            android:text="@string/Check_Yourself" />

        <TextView
            android:id="@+id/about_text"
            style="@style/HomeTextQStyle"
            android:background="@drawable/rounded_corner"
            android:text="@string/About" />

    </LinearLayout>

</ScrollView>